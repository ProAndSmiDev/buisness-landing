include ../_mixins
doctype html
html(lang="en")
  head
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    +meta('viewport', 'width=device-width, initial-scale=1')
    block SEO
    each val, i in copyright
      +meta(i, val)
    +link('favicon.ico', 'shortcut icon')
    +link('styles.min', 'stylesheet')
  body
    header
      .bg.bg--dark
        .wrapper
          include ../../components/logo/Main
          include ../../components/menu/Main

    main
      block content

    footer
      .bg.bg--dark
        .wrapper.wrapper--upper-footer
          include ../../components/menu/Main
          include ../../components/subscribe/Main
          include ../../components/contacts/Main
      .bg.bg--more-dark
        .wrapper.wrapper--bottom-footer
          include ../../components/copyright/Main
          include ../../components/links/Main

    +script('app.min')